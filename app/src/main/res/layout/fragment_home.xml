<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tpm.batch1.ui.fragments.StudentHomeFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/trainer"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/trainer_bg">
            <ImageView
                    android:id="@+id/ivTrainer"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/trainer"/>
            <TextView
                    android:id="@+id/tvTrainer"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivTrainer"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text_trainer"
                    android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/assignment"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/trainer_bg">
            <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/ivAssignment"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/assigment"/>
            <TextView
                    android:id="@+id/tvAssignment"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text_assignment"
                    android:layout_toStartOf="@id/ivAssignment"
                    android:textSize="15dp"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/course"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/trainer_bg">
            <ImageView
                    android:id="@+id/ivCourse"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/course"/>
            <TextView
                    android:id="@+id/tvCourse"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivCourse"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text_course"
                    android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/teamMember"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/trainer_bg">
            <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/ivTeamMember"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/team_member"/>
            <TextView
                    android:id="@+id/tvTeamMember"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text_teamMember"
                    android:layout_toStartOf="@id/ivTeamMember"
                    android:textSize="15dp"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>