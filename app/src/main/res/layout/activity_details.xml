<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="com.tpm.batch1.ui.activities.ActivityDetailsActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/activityDetailsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorToolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/colorWhite"
            android:theme="@style/toolbarStyleWhite"
    />
    <LinearLayout
            android:layout_below="@+id/activityDetailsToolbar"
            android:id="@+id/lyActivityImage"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_bg">
        <androidx.cardview.widget.CardView
                android:layout_margin="1dp"
                app:cardCornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivActivityDetailsImage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/user"/>
        </androidx.cardview.widget.CardView>
        <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:id="@+id/tvActivityDetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="@string/tpm"/>

    </LinearLayout>
    <ScrollView
            android:layout_below="@+id/lyActivityImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_bg">

            <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="@string/desc"/>
            <View
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"/>
            <TextView
                    android:id="@+id/tvActivityDetailsDescr"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="@string/home_text_trainer"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
